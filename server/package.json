{
  "name": "node-api",
  "version": "1.0.0",
  "description": "simple node api",
  "license": "MIT",
  "type": "module",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node --es-module-specifier-resolution=node dist/app.js",
    "dev": "tsc && concurrently \"tsc -w\" \"nodemon -r dotenv/config --experimental-specifier-resolution=node dist/app.js\"",
    "dev-static": "tsc && node -r dotenv/config --experimental-specifier-resolution=node dist/app.js",
    "dev-docker": "docker rm -f corner || true && docker rmi -f kevinkoste/corner || true && tsc && docker build -t kevinkoste/corner . && docker run --publish 8000:8000 --name corner kevinkoste/corner:latest",
    "deploy": "docker system prune -f && heroku container:push web -a corner-server && heroku container:release web -a corner-server",
    "deploy-staging": "docker system prune -f && heroku container:push web -a corner-server-staging && heroku container:release web -a corner-server-staging",
    "create-tables": "aws cloudformation update-stack --stack-name corner-tables --template-body file://src/resources/tables.yml"
  },
  "dependencies": {
    "@magic-sdk/admin": "^1.2.2",
    "@sendgrid/mail": "^7.2.4",
    "aws-sdk": "^2.738.0",
    "axios": "^0.20.0",
    "body-parser": "^1.19.0",
    "cheerio": "^1.0.0-rc.3",
    "connect-mongo": "^3.2.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "fs": "^0.0.1-security",
    "mongodb": "^3.6.2",
    "mongoose": "^5.10.10",
    "multiparty": "^4.2.2",
    "passport": "^0.4.1",
    "passport-magic": "^1.0.0",
    "sharp": "^0.26.2",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.21",
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.7",
    "@types/express-session": "1.15.16",
    "@types/mongodb": "^3.5.31",
    "@types/mongoose": "^5.7.36",
    "@types/multiparty": "^0.0.32",
    "@types/node": "^14.6.2",
    "@types/passport": "^1.0.4",
    "@types/passport-strategy": "^0.2.35",
    "@types/sharp": "^0.26.0",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.11.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "nodemon": "^2.0.6",
    "prettier": "2.1.2",
    "request": "^2.88.2",
    "typescript": "^4.0.2"
  },
  "engines": {
    "node": "14.14.0"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true
    },
    "extends": [
      "airbnb",
      "prettier",
      "prettier/@typescript-eslint",
      "prettier/react"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaFeatures": {},
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "semi": "off",
      "no-console": "off",
      "object-shorthand": "off",
      "no-unused-vars": "off",
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "js": "never",
          "jsx": "never",
          "ts": "never",
          "tsx": "never"
        }
      ]
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
          ]
        }
      }
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  }
}
